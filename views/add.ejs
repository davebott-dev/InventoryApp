<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>homepage</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <div>
      <header>
        <div><a href="/">Pokemon Inventory</a></div>
        <div>
          <a href="/new"><button>Create New Trainer</button></a>
          <a href="/"><button>All Trainers</button></a>
        </div>
      </header>
      <main>
        <h1><%= title %></h1>
        <form method="POST" action="/trainer/<%= index %>/add">
          <label for="categories">Choose a category:</label>
          <select id="categories" name="categories">
            <option value="null">Choose an option</option>
            <option value="pokemon">Pokemon</option>
            <option value="key_items">Items</option>
          </select>
          <div id="result"></div>
          <button type="submit">Add</button>
        </form>
      </main>
    </div>
    <footer>
      <a href="https://github.com/davebott-dev">View My Github</a>
    </footer>
  </body>
  <script type="text/javascript">
    const selected = document.getElementById("categories");
    const result = document.getElementById("result");
    selected.addEventListener("change", (e) => {
      if (e.target.value === "pokemon") {
        const nameInput = document.createElement("input");
        nameInput.setAttribute("name","name");
        const nameLabel = document.createElement("label");
        nameLabel.textContent = "Name: ";
        const typeInput = document.createElement("input");
        typeInput.setAttribute("name","type");
        const typeLabel = document.createElement("label");
        typeLabel.textContent = "Type: ";
        const levelInput = document.createElement("input");
        levelInput.setAttribute("type","number");
        levelInput.setAttribute("name","level");
        const levelLabel = document.createElement("label");
        levelLabel.textContent = "Level: ";
        const descInput = document.createElement("textarea");
        descInput.setAttribute("name","desc");
        const descLabel = document.createElement("label");
        descLabel.textContent = "Description: ";
        const urlInput = document.createElement("input");
        urlInput.setAttribute("name","url");
        const urlLabel = document.createElement("label");
        urlLabel.textContent = "Image URL (optional): ";

        while(result.firstChild) {
            result.removeChild(result.firstChild);
        }

        result.appendChild(nameLabel);
        result.appendChild(nameInput);
        result.appendChild(typeLabel);
        result.appendChild(typeInput);
        result.appendChild(levelLabel);
        result.appendChild(levelInput);
        result.appendChild(descLabel);
        result.appendChild(descInput);
        result.appendChild(urlLabel);
        result.appendChild(urlInput);
      } else {
        const nameInput = document.createElement("input");
        nameInput.setAttribute("name","name");
        const nameLabel = document.createElement("label");
        nameLabel.textContent = "Name: ";
        const descInput = document.createElement("textarea");
        descInput.setAttribute("name","desc");
        const descLabel = document.createElement("label");
        descLabel.textContent = "Description: ";
        const urlInput = document.createElement("input");
        urlInput.setAttribute("name","url");
        const urlLabel = document.createElement("label");
        urlLabel.textContent = "Image URL (optional): ";

        while(result.firstChild) {
            result.removeChild(result.firstChild);
        }
        result.appendChild(nameLabel);
        result.appendChild(nameInput);
        result.appendChild(descLabel);
        result.appendChild(descInput);
        result.appendChild(urlLabel);
        result.appendChild(urlInput);
      }
    });
  </script>
</html>
