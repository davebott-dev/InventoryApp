<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>homepage</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <div>
      <header>
        <div><a href="/">Pokemon Inventory</a></div>
        <a href="/new"><button>Create New Trainer</button></a>
      </header>
      <main>
        <h1>All Trainers</h1>
        <div class="gridCont">
          <% trainers.forEach((trainer) => { %>
          <div>
            <%= trainer.trainer_name %>
            <div>
              <a href="/trainer/<%= trainer.trainer_id %>">
                <button>View Inventory</button>
              </a>
              <form
                action="/trainer/<%= trainer.trainer_id %>/delete"
                method="POST"
              >
                <button>Delete Inventory</button>
              </form>
            </div>
          </div>
          <%}); %>
        </div>
      </main>
    </div>
    <footer>
      <a href="https://github.com/davebott-dev">View My Github</a>
    </footer>
  </body>
</html>
