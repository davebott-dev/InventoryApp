<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>homepage</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <header>
      <div><a href="/">Pokemon Inventory</a></div>
      <div>
        <a href="/new"><button>Create New Trainer</button></a>
        <a href="/"><button>All Trainers</button></a>
        <a href="/trainer/<%= index %>/add"
          ><button>Add to Inventory</button></a
        >
      </div>
    </header>
    <main>
      <% if(trainerData.length>0) { %>
         <h1><%= trainerData[0].trainer_name %>'s</h1>
        <% }  else {%>
          <h1>Bag</h1>
          <% } %>
      
      <ul>
        <% trainerData.forEach((element) => { %>
        <li>
          <a
            href="<%= element.owner_id %>/<%= element.category %>/<%= element.category_id %>"
            ><%= element.name %></a
          >
        </li>

        <%}); %>
      </ul>
    </main>
    <footer>
      <a href="https://github.com/davebott-dev">View My Github</a>
    </footer>
  </body>
</html>
